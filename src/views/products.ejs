Â«<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los juegos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los juegos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos (<%= productos.length %>)</h2>
			</div>
		
			<% productos.forEach(producto => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= producto.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= producto.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%= producto.price %></h2>
								<span><%= producto.discount %> % </span>
								<p><%= producto.name %></p>
								<!-- <i class="fa-solid fa-cart-shopping"></i> -->
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		
		</div>
	</div>
	<!-- /todos los juegos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>